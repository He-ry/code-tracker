<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tracker.system.models.mapper.RoleMapper">

    <!-- 根据用户ID查询角色code -->
    <select id="selectRoleCodesByUserId" parameterType="long" resultType="string">
        SELECT r.code
        FROM t_user_role ur
                 LEFT JOIN t_role r ON ur.role_id = r.id
        WHERE ur.user_id = #{userId}
    </select>

</mapper>
